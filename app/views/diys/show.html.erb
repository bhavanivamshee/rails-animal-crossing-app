<h1> <%= @diy.name %> </h1>
<br>
<img src="<%= @diy.image_url %>">
<br>
<h2> number of recipes needed to unlock: <%= @diy.recipes_to_unlock %> </h2>
<h3> Materials required: </h3>
    <% @diy.materials_diy.each do |hash| %>
        <% hash.to_a.each do |element| %>
            <li><%= element.join(": ")%></li>
            <% end %>
        <% end %>

<% @diy.materials.each do |mat| %>
    <% if mat.user == current_user %>
    <h2> your materials: </h2>
    <li> name: <%= mat.name %> | count: <%= mat.count %> | complete: <%= mat.complete %> <%= (mat.user == current_user) ? (link_to "Edit materials", edit_material_path(mat)) : (nil) %></li>
    <% else %>
    <% nil %>
    <% end %>
    <% end %>
    <br><br>

   <%=  link_to "Add this DIY to your list!", new_diy_material_path(@diy) %>



