<h1>Sign Up</h1>

<%=render(partial: "application/errors", locals: {errors: @user.errors.full_messages})%>

<%= form_for @user, url: signup_path do |f| %>
    <%=f.label "Island Name"%>
    <%=f.text_field :island_name%>
    <br>
    <%=f.label "Username"%>
    <%=f.text_field :username%>
    <br>
    <%=f.label "Email Address"%>
    <%=f.text_field :email%>
    <br>
    <%=f.label "Dream Address"%>
    <%=f.text_field :dream_address%>
    <br>
    <%=f.label "Password"%>
    <%=f.password_field :password %>
    <br>
    <%=f.label "Password Confirmation"%>
    <%=f.password_field :password_confirmation %>
    <br>
    <%=f.submit "Sign Up"%>
  <%end%>

  <%=link_to "Sign Up With Facebook", '/auth/facebook/'%>